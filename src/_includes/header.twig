<header class="fixed top-0 left-0 right-0 z-50 bg-zinc-950/80 backdrop-blur-lg border-b border-zinc-800" x-data>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-brand-500 to-violet-500 flex items-center justify-center text-white font-bold text-lg shadow-lg shadow-brand-500/25 group-hover:shadow-brand-500/40 transition-shadow">
          W
        </div>
        <span class="text-xl font-bold hidden sm:block">
          <span class="gradient-text">Wheeldogg</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex items-center gap-1">
        {% for item in navigation %}
          <li>
            <a
              href="{{ item.url }}"
              class="px-3 py-2 rounded-lg text-sm font-medium transition-colors {{ page.url == item.url ? 'text-brand-400 bg-brand-500/10' : 'text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800/50' }}"
            >
              {{ item.title }}
            </a>
          </li>
        {% endfor %}
      </ul>

      <!-- Mobile menu button -->
      <button
        class="lg:hidden p-2 rounded-lg text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800 transition-colors"
        @click="$store.nav.toggle()"
        aria-label="Toggle navigation"
      >
        <svg x-show="!$store.nav.isOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg x-show="$store.nav.isOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" x-cloak>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div
      class="lg:hidden pb-4"
      x-show="$store.nav.isOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-2"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-2"
      x-cloak
    >
      <ul class="flex flex-col gap-1 pt-2 border-t border-zinc-800">
        {% for item in navigation %}
          <li>
            <a
              href="{{ item.url }}"
              class="block px-3 py-2 rounded-lg text-sm font-medium transition-colors {{ page.url == item.url ? 'text-brand-400 bg-brand-500/10' : 'text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800/50' }}"
              @click="$store.nav.close()"
            >
              {{ item.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
