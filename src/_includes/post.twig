{% extends "@includes/layout.twig" %}

{% block body %}
<main class="py-12">
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="mb-8">
      <a href="/blog/" class="inline-flex items-center text-brand-400 hover:text-brand-300 mb-4 text-sm transition-colors">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
        </svg>
        Back
      </a>

      <h1 class="text-3xl md:text-4xl font-bold mb-3 text-white">{{ title }}</h1>

      <div class="flex items-center gap-3 text-sm text-zinc-400">
        <time>{{ page.date | date("M j, Y") }}</time>
        {% if category %}
          <span>Â·</span>
          <span class="capitalize">{{ category }}</span>
        {% endif %}
      </div>
    </header>

    <div class="prose prose-lg max-w-none">
      {{ content | raw }}
    </div>
  </article>
</main>
{% endblock %}
